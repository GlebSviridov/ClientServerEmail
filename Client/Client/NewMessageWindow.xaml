<Window x:Class="Client.NewMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="NewMessageWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="senderId" HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" Text="Write your id" VerticalAlignment="Top" Width="95" Margin="10,123,0,0"/>
        <TextBox x:Name="recieverId" HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" Text="Write reciever Id" VerticalAlignment="Top" Width="107" Margin="439,123,0,0"/>
        <TextBox x:Name="messageTheme" HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" Text="Write your theme" VerticalAlignment="Top" Width="536" Margin="10,152,0,0" />
        <TextBox x:Name="messageContent" HorizontalAlignment="Left" Height="174" TextWrapping="Wrap" Text="Hi!" VerticalAlignment="Top" Width="536" Margin="10,192,0,0"/>
        <Button Content="Send Message" HorizontalAlignment="Left" Height="53" Margin="595,313,0,0" VerticalAlignment="Top" Width="142" FontSize="16" Click="Button_Click"/>

    </Grid>
</Window>
